<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UsuarioActivity"
        android:orientation="vertical"
        tools:ignore="ExtraText">



    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/entrada"
            android:textColor="@color/colorText"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="372dp"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.091"
            android:id="@+id/textTitulo"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/text_usuario"
              android:textSize="20dp"
              android:textAlignment="center"
              android:layout_gravity="center"
              app:layout_constraintTop_toBottomOf="@+id/textTitulo"
              tools:ignore="MissingConstraints"
              android:id="@+id/textDescricao"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_margin="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textDescricao"
            android:id="@+id/linearLayout" android:layout_marginTop="20dp">

        <ImageView
                android:id="@+id/imgusuario"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:src="@drawable/ic_user"
        />
        <TextView
            android:id="@+id/txtDadosUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            tools:text="Oi Oi Oi Oi Oi Oi"

        />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>